<div class="min-h-screen flex flex-col text-gray-800">
  <div class="flex fixed flex-col h-full w-64 bg-white border-r border-b border-yellow-300 ">
    <div class="flex items-center justify-center h-14 border-b border-yellow-300 h-28 p-2">
      <%= link_to root_path do %>
        <%= vite_image_tag "images/logo.png", alt: "StudyBuddy Logo"%>
      <% end %>
    </div>
    <div class="overflow-y-auto overflow-x-hidden flex-grow">
      <% if current_user.present? %>
        <div class="flex items-center space-x-4 p-2 mb-5 border-b border-yellow-300">
          <% if current_user.avatar.attached? %>
            <%= image_tag(current_user.avatar, class: 'h-12 rounded-full', alt: 'Аватарка') %>
          <% else %>
            <%= vite_image_tag 'images/default_avatar.png', alt: "Аватарка", class: "h-12 rounded-full border border-yellow-300" %>
          <% end %>
          <div>
            <h4 class="font-light text-lg text-gray-700 capitalize font-poppins tracking-wide">
              <%= current_user.short_name %>
            </h4>
          </div>
        </div>
      <% else %>
        <div class="flex flex-col items-left space-y-4 p-4 mb-5 border-b border-yellow-300">
          <%= link_to new_user_session_path, class: 'text-gray-600 hover:text-yellow-500' do %>
            <span class="ml-2 text-sm tracking-wide truncate"><%= t('links.sign_in') %></span>
          <% end %>
          <%= link_to new_user_registration_path, class: 'text-gray-600 hover:text-yellow-500' do %>
            <span class="ml-2 text-sm tracking-wide truncate"><%= t('links.register') %></span>
          <% end %>
        </div>
      <% end %>
      <ul class="flex flex-col py-4 space-y-1">
        <li class="px-5">
          <div class="flex flex-row items-center h-8">
            <div class="text-sm font-light tracking-wide text-gray-500">Меню</div>
          </div>
        </li>
        <% if current_user.present? %>
          <li>
            <%= link_to root_path, class: 'relative flex flex-row items-center h-11 focus:outline-none text-gray-600 
                border-l-4 border-transparent hover:border-yellow-500 hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
              <span class="inline-flex justify-center items-center ml-4">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 
                   0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                  </path>
                </svg>
              </span>
              <span class="ml-2 text-sm tracking-wide truncate">Группы</span>
            <% end %>
          </li>
          <li>
            <%= link_to articles_path, class: 'relative flex flex-row items-center h-11 focus:outline-none text-gray-600 
                border-l-4 border-transparent hover:border-yellow-500 hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
              <span class="inline-flex justify-center items-center ml-4">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 
                   0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                  </path>
                </svg>
              </span>
              <span class="ml-2 text-sm tracking-wide truncate">Обучающие статьи</span>
            <% end %>
          </li>
          <li class="px-5">
            <div class="flex flex-row items-center h-8">
              <div class="text-sm font-light tracking-wide text-gray-500">Настройки</div>
            </div>
          </li>
          <li>
            <%= link_to profile_users_path, class: 'relative flex flex-row items-center h-11 focus:outline-none text-gray-600 
           border-l-4 border-transparent hover:border-yellow-500 hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
              <span class="inline-flex justify-center items-center ml-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 
                018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                </path>
              </svg>
              </span>
              <span class="ml-2 text-sm tracking-wide truncate">Профиль</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'relative flex 
            flex-row items-center h-11 focus:outline-none text-gray-600 border-l-4 border-transparent hover:border-yellow-500 
            hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
              <span class="inline-flex justify-center items-center ml-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6
                 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                </path>
              </svg>
              </span>
              <span class="ml-2 text-sm tracking-wide truncate">Выйти</span>
            <% end %>
          </li>
          </ul>
        <% else %>
          <li>
            <%= link_to root_path, class: 'relative flex flex-row items-center h-11 focus:outline-none text-gray-600 
            border-l-4 border-transparent hover:border-yellow-500 hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
            <span class="inline-flex justify-center items-center ml-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 
                10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 
                1 0 001 1m-6 0h6">
                </path>
              </svg>
            </span>
              <span class="ml-2 text-sm tracking-wide truncate">Главная</span>
            <% end %>
          </li>
          <li>
            <%= link_to articles_path, class: 'relative flex flex-row items-center h-11 focus:outline-none text-gray-600 
                border-l-4 border-transparent hover:border-yellow-500 hover:bg-yellow-50 hover:text-yellow-500 pr-6' do %>
              <span class="inline-flex justify-center items-center ml-4">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 
                   0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                  </path>
                </svg>
              </span>
              <span class="ml-2 text-sm tracking-wide truncate">Обучающие статьи</span>
            <% end %>
          </li>
        <% end %>
      </div>
  </div>
</div>
