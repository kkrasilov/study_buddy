<div class="flex gap-2 mt-2 mb-2" id="message-<%= message.id %>">
  <div>
    <% if message.user.avatar.attached? %>
      <%= image_tag(url_for(message.user.avatar), class: 'rounded-full h-[40px] w-[40px] cursor-pointer object-cover', alt: 'Аватар пользователя') %>
    <% else %>
      <%= vite_image_tag default_avatar_name(message.user), alt: "Аватарка", class: "border border-yellow-300 rounded-full h-[40px] w-[40px] cursor-pointer object-cover" %>
    <% end %>
  </div>
  <div class="flex flex-col gap-2 w-full">
    <div class="text-sm font-bold text-gray-600">
      <%= message.user.short_name %>
    </div>
    <div class="rounded-md bg-gray-200 p-2 w-7/12 text-gray-700">
      <%= message.body %>
    </div>
    <div class="text-sm text-gray-400">
      <%= I18n.l(message.created_at, format: :custom) %>
    </div>
  </div>
</div>
