<div class="p-6 flex items-center justify-center ">
  <div class="">
    <div>
      <div class="bg-white rounded shadow-lg p-4 px-4 mb-6 border border-yellow-300">
        <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 lg:grid-cols-3">
          <div class="text-gray-600">
            <p class="font-medium text-lg">Новая группа</p>
          </div>
          <%= form_for @group || Group.new, html: { multipart: true }, data: { turbo: false } do |f| %>
            <div class="lg:col-span-2">
              <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-5">
                <div class="md:col-span-5">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: 'h-10 border border-gray-200 text-gray-600 mt-1 rounded-lg px-4 w-full' %>
                </div>
                <div class="md:col-span-5">
                  <%= f.label :description, class: 'text-gray-700' %>
                  <%= f.text_area :description, class: 'h-10 border border-gray-200 text-gray-600 mt-1 rounded-lg px-4 text-sm w-full h-[200px]' %>
                </div>
                <div class="md:col-span-5">
                  <%= f.label :image %>
                  <%= f.file_field :image, class: 'block p-2 w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none' %>
                </div>
                <div class="md:col-span-5 text-right">
                  <div class="inline-flex items-end">
                    <%= f.submit t('links.save'), class: 'cursor-pointer text-white bg-yellow-500 
                       hover:bg-yellow-600 focus:ring-4 focus:outline-none 
                       focus:ring-blue-300 font-medium rounded-lg text-sm sm:w-auto px-5 py-2.5 text-center' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
